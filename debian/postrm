#! /bin/sh

set -e

case "$1" in
    purge)
       find /apps/sabnzbd-rn/* -maxdepth 0 -type 'f' | grep -v "app-config" | xargs rm -f
       find /apps/sabnzbd-rn/* -maxdepth 0 -type 'd' | grep -v "app-config" | xargs rm -rf
       rm /apps/sabnzbd-rn/.localapp

       event_push app readynasd '<delete-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sabnzbd-rn" success="1" reboot="0"/></delete-s>' 0 0
       ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
       ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 0

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
