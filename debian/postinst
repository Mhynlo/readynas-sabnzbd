#!/bin/sh

set -e

case "$1" in
    configure)
    chown -R admin:admin /apps/sabnzbd-rn

    event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sabnzbd-rn" success="1"/></add-s>' 0 0
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

###
# Enable service
###
rn_nml -S sabnzbd-rn


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
